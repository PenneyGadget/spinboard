<div class="container-fluid text-center">
  <h4 class="page-header">Create an Account!</h4>
    <div class="form-text">
      <%= form_for @user do |f| %>
        <%= f.label :name %>:
        <br>
        <%= f.text_field :name %>
        <br><br>
        <%= f.label :email %>:
        <br>
        <%= f.email_field :email %>
        <br><br>
        <%= f.label :password %>:
        <br>
        <%= f.password_field :password %>
        <br><br>
        <%= f.label :password_confirmation %>:
        <br>
        <%= f.password_field :password_confirmation %>
        <br><br>
        <%= f.submit "Create Account", class:"submit-btn" %>
      <% end %>
    </div>
</div>
